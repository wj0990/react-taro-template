{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      // TS5090 leading './'
      "@/*": ["./src/*"],
      "@/components": [
        "./src/components"
      ],
      "@/utils": [
        "./src/utils"
      ],
      "@/assets": [
        "./src/assets"
      ],
      "@/hooks": [
        "./src/hooks"
      ],
      "@/store": [
        "./src/pages/store"
      ],
      "@/service": [
        "./src/service"
      ],
      "@/i18next": [
        "./locales-config/i18next.config"
      ]
    }
  },
  "include": ["./src", "./types", "./config"],
  "compileOnSave": false
}
